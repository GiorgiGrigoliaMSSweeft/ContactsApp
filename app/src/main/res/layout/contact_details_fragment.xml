<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/contactDetailsCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/details_fragment_cardview_margin_horizontal"
        android:layout_marginTop="@dimen/details_fragment_cardview_margin_top"
        app:cardCornerRadius="@dimen/details_fragment_cardview_corner_radius"
        app:cardElevation="@dimen/details_fragment_cardview_card_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/details_fragment_cardview_background"
            android:padding="@dimen/details_fragment_cardview_constraint_padding">

            <TextView
                android:id="@+id/contactInfoTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/details_title"
                android:textSize="@dimen/details_fragment_cardview_title_font_size"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Contact info" />

            <TextView
                android:id="@+id/phoneNumbersTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/details_fragment_cardview_category_title_margin_top"
                android:text="@string/phone_numbers"
                android:textSize="@dimen/details_fragment_cardview_category_title_font_size"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contactInfoTitle" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/phoneNumberRvItems"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phoneNumbersTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
